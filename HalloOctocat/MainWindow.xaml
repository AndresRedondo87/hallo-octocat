<Window x:Class="HalloOctocat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HalloOctocat"
        mc:Ignorable="d"
        Title="Hallo Octocat by LernMoment" Height="350" Width="525" WindowStyle="None" AllowsTransparency="True" Opacity="0.8" ResizeMode="NoResize" Background="{x:Null}">
    <Border CornerRadius="55" BorderBrush="#F9F2E7" BorderThickness="2" Background="#00A8C6">
        <Grid>
            <Button x:Name="closeButton" Content="Beenden" HorizontalAlignment="Left" BorderBrush="#F9F2E7" BorderThickness="2" Background="#F9F2E7" Margin="221,231,0,0" VerticalAlignment="Top" Width="75" Click="button_Click"/>
            <Image x:Name="image" Source="{Binding ImageToDisplay}" HorizontalAlignment="Left" Height="196" Margin="152,10,0,0" VerticalAlignment="Top" Width="208"/>
            <Label x:Name="label" Content="{Binding FoundOctocats}" HorizontalAlignment="Left" Margin="152,273,0,0" VerticalAlignment="Top"/>
            <Button x:Name="startButton" Content="Start" Command="{Binding StartOctoShow}" HorizontalAlignment="Left" Margin="141,231,0,0" VerticalAlignment="Top" Width="75"/>
        </Grid>
    </Border>
</Window>
